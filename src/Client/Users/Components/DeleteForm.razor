<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            Verwijder Klant?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@user.FirstName" Label="Voornaam Klant" ReadOnly="true" />
        <MudTextField Value="@user.LastName" Label="Achternaam Klant" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuleer</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteUser">Verwijder Klant</MudButton>
    </DialogActions>
</MudDialog>