<MudTimePicker @ref="_picker" Label="With action buttons" AutoClose="@autoClose">
    <PickerActions>
        <MudButton Class="mr-auto align-self-start" OnClick="@(() => _picker.Clear())">Clear</MudButton>
        <MudButton OnClick="@(() => _picker.Close(false))">Cancel</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="@(() => _picker.Close())">Ok</MudButton>
    </PickerActions>
</MudTimePicker>
<MudSwitch @bind-Checked="@autoClose" Color="MudBlazor.Color.Secondary">AutoClose</MudSwitch>

